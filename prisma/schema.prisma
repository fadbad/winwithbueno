// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Jobs {
  id                  Int       @id @default(autoincrement())
  payload             Json?
  attempts            Int?      @default(0)
  createdAt           DateTime  @default(now())
}

model Admin {
  id                  Int       @id @default(autoincrement())
  name                String?
  token               String?
  token_sms           Int?
  email               String    @unique
  password            String?
  image               String?
  role                String?
  info                Json?
  isDev               Boolean   @default(false)
  loginIp             String?
  loginAt             DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model Option {
  key                 String   @unique
  value               String?  @db.LongText
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Code {
  code String @unique
  usedBy Int? 
  usedAt DateTime?
}

model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  first_name          String?
  last_name           String?
  mobile              String?
  email               String?
  image               String?
  city                String?
  country             String?
  gender              String?
  dob                 DateTime?
  verified            Boolean?  @default(false)
  confirmed           Boolean?  @default(false)
  info                Json?
  ip                  String?
  prize               String?
  prizeCode           String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([email])
  @@index([mobile])
}
